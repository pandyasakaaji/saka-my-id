---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home";
const active = "home";
---

<BaseLayout pageTitle={pageTitle} active={active}>
	<section
		class="min-h-screen md:min-h-[92vh] text-gray-900 flex flex-col justify-center items-center"
	>
		<div class="max-w-4xl text-center">
			<h1
				class="text-4xl sm:text-5xl md:text-6xl
          font-extrabold
          tracking-tight leading-snug
          mb-4 font-stack"
			>
				Hi, there.
			</h1>

			<h2
				class="text-2xl sm:text-3xl md:text-4xl
          font-light
          mt-4
          text-gray-600"
			>
				My name is Saka, and welcome to my journey.
			</h2>

			<a
				href="/author"
				class="mt-8 px-8 py-3
          border-2 border-gray-900
          text-gray-100 bg-gray-900 hover:bg-gray-800 hover:text-white
          text-lg font-semibold
          rounded-lg
          transition-colors duration-200
          inline-block"
			>
				And?
			</a>
		</div>
	</section>
</BaseLayout>
